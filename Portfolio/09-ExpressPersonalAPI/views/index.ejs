<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Greeting Page</title>
</head>
<body>
    <h1>Welcome!</h1>
    <form action="/greet" method="GET">
        <label for="name">Enter your name:</label>
        <input type="text" id="name" name="name" required>
        <button type="submit">Greet me!</button>
    </form>

    <% if (names.length > 0) { %>
        <h2>Greetings</h2>
        <ul>
            <% names.forEach((name, index) => { %>
                <li><a href="/greet/<%= index %>">Hi, <%= name %>!</a></li>
            <% }) %>
        </ul>
    <% } %>

    <% if (error) { %>
        <p style="color:red"><%= error %></p>
    <% } %>

    <h2>TODO List</h2>
    <ul>
        <% tasks.forEach((task, index) => { %>
            <li><%= task %>
                <form action="/task/delete/<%= index %>" method="post" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
                <form action="/task/move/up/<%= index %>" method="post" style="display:inline;">
                    <button type="submit">&uarr;</button>
                </form>
                <form action="/task/move/down/<%= index %>" method="post" style="display:inline;">
                    <button type="submit">&darr;</button>
                </form>
            </li>
        <% }) %>
    </ul>

    <form action="/task" method="POST">
        <label for="task">New Task:</label>
        <input type="text" id="task" name="task" required>
        <button type="submit">Add Task</button>
    </form>

</body>
</html>
