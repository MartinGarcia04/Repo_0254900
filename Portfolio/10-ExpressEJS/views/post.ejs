<%- include('partials/header') %>

<h3>Remove Post</h3>
    <form action="/deletePost/<%= id %>" method="post">
        <button type="submit" onclick="return confirm('Are you sure you want to delete this post?');">Delete Post</button>
    </form>

<h3>Update Post</h3>
<form action="/editPost/<%= id %>" method="post">
    <div>
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= post.title %>" required>
    </div>
    <label for="content">Content:</label>
    <div>
        <textarea id="content" name="content" rows="8" cols="50"><%= post.content %></textarea>
        <button type="submit">Update</button>
    </div>
    
</form>



<a href="/home">Return to Home</a>


